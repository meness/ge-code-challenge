{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@layouts": [
        "src/layouts"
      ],
      "@graphql": [
        "src/graphql"
      ],
      "@graphql/*": [
        "src/graphql/*"
      ],
      "@common/*": [
        "src/common/*"
      ],
      "@hooks": [
        "./src/hooks"
      ],
      "@assets/*": [
        "./src/assets/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@*": [
        "./src*"
      ]
    },
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true
  },
  "include": [
    "src",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "public"
  ]
}
